<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuracion">

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/principal"
        android:onClick="onclickBtncontinuar"
        android:text="Guardar"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerSesionC"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/spinner"
        android:entries="@array/SesionTrabajo"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="@+id/textViewPausaCorta4"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textViewPausaLarga4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="12dp"
        android:lineSpacingExtra="8dp"
        android:text="PAUSA LARGA"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#090909"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinnerPausaLargaC"
        app:layout_constraintStart_toStartOf="@+id/spinnerPausaLargaC" />

    <Spinner
        android:id="@+id/spinnerPausaCortaC"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/spinner"
        android:entries="@array/PausaCorta"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="@+id/textViewPausaLarga4"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSesionC" />

    <Spinner
        android:id="@+id/spinnerPausaLargaC"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/spinner"
        android:entries="@array/PausaLarga"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPausaCortaC"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/textViewPausaCorta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="12dp"
        android:lineSpacingExtra="8dp"
        android:text="PAUSA CORTA"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#090909"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinnerPausaCortaC"
        app:layout_constraintStart_toStartOf="@+id/spinnerPausaCortaC" />

    <TextView
        android:id="@+id/textViewSesion4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="12dp"
        android:lineSpacingExtra="8dp"
        android:text="SESIÃ“N DE TRABAJO"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#090909"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinnerSesionC"
        app:layout_constraintStart_toStartOf="@+id/spinnerSesionC" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="268dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"

        android:layout_marginBottom="104dp"
        android:lineSpacingExtra="8dp"
        android:text="Modifique sus preferencias de \ntrabajo y descanso"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#090909"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Configura el \ntemporizador "
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtEstado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.648" />

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/atras"
        android:onClick="onClickAtras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>